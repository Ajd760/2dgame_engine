{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "g++.exe build src folder",
        "command": "G:\\MinGW\\bin\\g++.exe",
        "args": [
            "-g", "${workspaceFolder}\\src\\*.cpp", 
            "-o", "${workspaceFolder}\\game.exe",
            "-w",
            "-Wfatal-errors",
            "-m32",
            "-static-libstdc++",
            "-I.\\lib\\lua",
            "-L.\\lib\\lua",
            "-llua53",
            "-lmingw32",
            "-lSDL2main",
            "-lSDL2_image",
            "-lSDL2_ttf",
            "-lSDL2_mixer",
            "-lSDL2"
        ],
        "options": {
          "cwd": "G:\\MinGW\\bin"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }